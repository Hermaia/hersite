{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "convertTabsToSpaces": true
    },
    "include": [
        "./src/**/*.ts",
        "./lib/**/*.ts"
    ],
    "exclude": [
      "./node_modules/**/*.ts",
      "./typings/**/*.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": true,
    "atom": {
        "rewriteTsconfig": true
    }
}
