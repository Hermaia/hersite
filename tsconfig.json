{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "removeComments": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!./src/**/*.d.ts",
        "./lib/**/*.ts",
        "!./lib/**/*.d.ts",
        "!./node_modules/**/*.ts",
        "!./typings/**/*.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "convertTabsToSpaces": true
    },
    "files": [
        "./src/asset/copy.ts",
        "./src/helpers/file-helper.ts",
        "./src/helpers/html-helper.ts",
        "./src/helpers/path-helper.ts",
        "./src/hersite.ts",
        "./src/md/builder.ts",
        "./src/md/renderer.ts",
        "./src/options.ts",
        "./src/pages/page.ts",
        "./src/pug/builder.ts",
        "./lib/help.ts",
        "./lib/hersite.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": true,
    "exclude": [],
    "atom": {
        "rewriteTsconfig": true
    }
}
